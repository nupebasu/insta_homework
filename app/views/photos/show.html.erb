<div class="page-header">
  <h1>Photo #<%= @photo.id %></h1>
</div>

<!-- ========= Trying this out! -->

<form action="/create_favorite" class="form-horizontal">
  <!-- Label and input for photo_id -->
  <div class="form-group">
    <label for="photo_id" class="col-sm-2 control-label">
    </label>
    <div class="col-sm-10">
      <input type="hidden" id="photo_id" name="photo_id" placeholder="Photo" class="form-control" value="<%=@photo.id%>">
    </div>
  </div>

  <!-- Label and input for user_id -->
  <div class="form-group">
    <label for="user_id" class="col-sm-2 control-label">
    </label>
    <div class="col-sm-10">
      <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= current_user.email %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Add to Favorites" class="btn btn-primary">
    </div>
  </div>
</form>



<dl class="dl-horizontal">
  <dt>Image url</dt>
  <dd><img src="<%= @photo.image_url %>"</dd>

  <dt>Caption</dt>
  <dd><%= @photo.caption %></dd>

  <dt>User</dt>
  <dd><%= @photo.user_id %></dd>

</dl>

<table class="table table-striped table-hover"
<% @photo.comments.each do |comment| %>
<tr>
    <td>
    <%= comment.content%>
    </td>
</tr>
</table>
<% end %>

<form action="/create_comment" class="form-horizontal">
  <!-- Label and input for content -->
  <div class="form-group">
    <label for="content" class="col-sm-2 control-label">
      Comment
    </label>
    <div class="col-sm-10">
      <textarea id="content" name="content" placeholder="Content" class="form-control" rows="3"></textarea>
    </div>
  </div>

  <!-- Label and input for photo_id -->
  <div class="form-group">

    <div class="col-sm-10">
      <input type="hidden" id="photo_id" name="photo_id" placeholder="Photo" class="form-control" value="<%= @photo.id%>">
    </div>
  </div>

  <!-- Label and input for user_id -->
  <div class="form-group">
    <label for="user_id" class="col-sm-2 control-label">
      User
    </label>
    <div class="col-sm-10">
      <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= current_user.email %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Comment" class="btn btn-primary">
    </div>
  </div>
</form>

